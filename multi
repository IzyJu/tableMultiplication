using System;

namespace calculette
{
    class Program
    {
        public static void multiplication(float num1, float num2)
        {

            Console.WriteLine(num1 * num2);
        }
        public static void soustraction(float num1, float num2)
        {
            Console.WriteLine(num1 - num2);

        }
        public static void division(float num1, float num2)
        {
            Console.WriteLine(num1 / num2);
        }
        public static void modulo(float num1, float num2)
        {
            Console.WriteLine(num1 % num2);
        }
        public static void addition(float num1, float num2)
        {
            Console.WriteLine(num1 + num2);
        }
        static void Main(string[] args)
        {
            while (true)
            {
                Console.WriteLine("entre le premiere operande");
                float first = float.Parse(Console.ReadLine());
                Console.WriteLine("entre le second operande");
                float second = float.Parse(Console.ReadLine());
                Console.WriteLine("quel op√©rande choisis tu ?");
                string oper = Console.ReadLine();

                if (oper == "add")
                {
                    addition(first, second);
                }
                else if (oper == "multi")
                {
                    multiplication(first, second);
                }
                else if (oper == "modulo")
                {
                    modulo(first, second);
                }
                else if (oper == "soustrac")
                {
                    soustraction(first, second);
                }
                else if (oper == "division")
                {
                    division(first, second);
                }
            }
        }
    }
}
